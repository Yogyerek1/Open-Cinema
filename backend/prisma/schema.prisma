generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum MediaType {
  MOVIE
  SERIES
}

enum Genre {
  ACTION
  COMEDY
  DRAMA
  HORROR
  SCIFI
  THRILLER
  ROMANCE
  DOCUMENTARY
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  username  String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id          Int       @id @default(autoincrement())
  type        MediaType
  title       String
  description String?
  genre       Genre
  posterUrl   String?
  videoUrl    String?
  rating      Float     @default(0)
  releaseDate DateTime?
  publishDate DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  seasons Season[]

  @@index([type])
  @@index([rating])
  @@index([publishDate])
  @@index([genre])
}

model Season {
  id           Int @id @default(autoincrement())
  mediaId      Int
  seasonNumber Int

  media    Media     @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  episodes Episode[]

  @@unique([mediaId, seasonNumber])
}

model Episode {
  id            Int      @id @default(autoincrement())
  seasonId      Int
  episodeNumber Int
  title         String
  duration      Int
  videoUrl      String
  createdAt     DateTime @default(now())

  season Season @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  @@unique([seasonId, episodeNumber])
}
